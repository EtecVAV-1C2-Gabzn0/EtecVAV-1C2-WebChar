#----------------- Fun√ß√£o para verificar -------------------

def verificar(mapa_alternativas, altCerta,opcoes):
  
  while True:
    resposta_jogador_letra = input("\nSua resposta (A/B/C/D/E): ").strip().upper()
    if resposta_jogador_letra in opcoes:
      break
    else:
      print("Por favor, digite A, B, C, D ou E.")
  
  altEscolhida = mapa_alternativas.get(resposta_jogador_letra)
  if altEscolhida == altCerta:  
    print(f'\n‚úÖ Correto! Voc√™ ganhou {pontos_por_acerto} pontos.')
    time.sleep(1.5)
    return pontos_por_acerto
  else:
    print(f'\n‚ùå ERRADO! A resposta correta era {altCerta}')
    time.sleep(1.5)
    return 0

#----------------- Fun√ß√£o para exibir resultado -----------

def resultado(pontuacao_final, total_questoes):

  print("=" * 40)
  print("üèÜ RESULTADO FINAL üèÜ")
  print("=" * 40)

  total_questoes = total_questoes
  acertos = pontuacao_final // pontos_por_acerto
  pontuacao_maxima = total_questoes * pontos_por_acerto
  percentual = (acertos / total_questoes) * 100 if total_questoes > 0 else 0

  print(f"Total de Quest√µes: {total_questoes}")
  print(f"Acertos: {acertos} de {total_questoes}")
  print(f"Pontua√ß√£o Final: {pontuacao_final} de {pontuacao_maxima}")
  print(f"Percentual de Acerto: {percentual:.2f}%")

  input("\nPressione ENTER para voltar ao Menu Principal...")
