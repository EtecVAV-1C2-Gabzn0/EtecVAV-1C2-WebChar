def menu():
  while True:
    print("=" * 40)
    print("ü§ñ Quiz Arduino üí°")
    print("=" * 40)
    print("1. üöÄ Responder Quiz")
    print("2. üìú Exibir Regras")
    print("3. üö™ Encerrar Programa")
    print("-" * 40)

    escolha = input("Selecione uma op√ß√£o (1, 2 ou 3): ").strip()

    if escolha == '1':
      embaralhar()
    elif escolha == '2':
      regras()
      
    elif escolha == '3':
      print("\nüëã Obrigado por jogar!")
      time.sleep(2)
      break
    else:
      print("\n Op√ß√£o inv√°lida. Tente novamente.")
      time.sleep(1.5)

